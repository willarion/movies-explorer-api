{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "root": true,
    "extends": [
       "airbnb-base"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "rules": {
      "no-underscore-dangle": ["error", { "allow": ["_id"] }],
      "max-classes-per-file": ["error", 5],
      "no-console": "warn",
      "no-useless-escape": "warn"
    }
}
